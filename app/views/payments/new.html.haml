.container
  .row
    %nav.transparent.no-box-shadow
      .nav-wrapper
        .col.s12
          - if current_user.manager?
            = link_to 'Users', users_path, class: 'breadcrumb light-blue-text'
          = link_to 'Invoices', user_invoices_path(@user), class: 'breadcrumb light-blue-text'
          = link_to 'Payments', invoice_payments_path(@invoice), class: 'breadcrumb light-blue-text'
          %span.breadcrumb.grey-text.text-darken-4 New
  %h4 New Payment
  %br
  = form_for [@invoice, @payment] do |form|
    = render partial: 'fields', locals: {f: form }
    %br
    = form.submit 'SAVE', :class => 'btn'
    = link_to 'CANCEL', invoice_payments_path(@invoice), class: 'btn'
  %br
  %br