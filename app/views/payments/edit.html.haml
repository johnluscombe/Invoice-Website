%ol.breadcrumb
  %li.breadcrumb-item
    = link_to 'Employees', users_path
  %li.breadcrumb-item
    = link_to 'Invoices', user_invoices_path(@user)
  %li.breadcrumb-item
    = link_to 'Payments', invoice_payments_path(@invoice)
  %li.breadcrumb-item.active Edit Payment

%h1 Edit Payment
%br
= render 'shared/errors', object: @payment

= form_for @payment do |form|
  = render partial: 'fields', locals: {f: form }
  %br
  = form.submit 'UPDATE PAYMENT', :class => 'btn btn-success'
  = link_to 'CANCEL', invoice_payments_path(@invoice), class: 'btn btn-danger btn-outline'