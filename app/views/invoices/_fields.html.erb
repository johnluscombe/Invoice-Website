<table class="fields">
  <col width="100">
  <col width="200">
  <tr>
    <td class="text-right"><%= f.label :start_date %></td>
    <td><%= f.date_field :start_date, class: 'form-control' %></td>
  </tr>
  <tr>
    <td class="text-right"><%= f.label :end_date %></td>
    <td><%= f.date_field :end_date, class: 'form-control' %></td>
  </tr>
<% if current_user.admin %>
      <tr>
        <td class="text-right"><%= f.label :status %></td>
        <td>
          <%= f.select :status, [%w(Started Started), %w(In\ Progress In\ Progress), %w(Pending Pending),
                                 %w(Paid Paid)], {}, class: 'form-control' %>
        </td>
      </tr>
      <tr>
        <td class="text-right"><%= f.label 'Check #' %></td>
        <td><%= f.text_field :check_no, class: 'form-control' %></td>
      </tr>
<% end %>
</table><br>
<table>
  <col width="100">
  <col width="200">
  <% if current_user.admin %>
      <tr>
        <td colspan="2" class="text-center"><strong>Overrides</strong></td>
      </tr>
  <% end %>
</table>
<table class="fields">
  <col width="100">
  <col width="200">
  <% if current_user.admin %>
      <tr>
        <td class="text-right"><%= f.label :hours %></td>
        <td><%= f.text_field :hours, class: 'form-control' %></td>
      </tr>
      <tr>
        <td class="text-right"><%= f.label 'Hourly Rate' %></td>
        <td><%= f.text_field :rate, class: 'form-control' %></td>
      </tr>
      <tr>
        <td class="text-right"><%= f.label :net_pay %></td>
        <td><%= f.text_field :net_pay, class: 'form-control' %></td>
      </tr>
  <% end %>
</table><br>