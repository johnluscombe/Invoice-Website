.container
  .row
    %nav.grey.lighten-5
      .nav-wrapper
        .col.s12
          - if current_user.manager?
            = link_to 'Users', users_path, class: 'breadcrumb grey-text'
          = link_to 'Invoices', user_invoices_path(@user), class: 'breadcrumb grey-text text-darken-4'

  %br
  - if current_user.manager?
    - if @all
      %h4 All Invoices
    - elsif @submitted
      %h4 Submitted Invoices
    - else
      - if @user.fullname.nil? or @user.fullname == ''
        %h4= "Invoices for #{@user.name}"
      - else
        %h4= "Invoices for #{@user.fullname}"
  - else
    %h4 Invoices
  %br
  - if (@user and @user.invoices.count > 0) or (@invoices.count > 0 and (@all or @submitted))
    = render @invoices
    %br
    - if @user
      = link_to new_user_invoice_path(@user), class: 'btn-floating btn-large green' do
        %i.material-icons add
  - elsif @user
    %p You do not have any invoices yet.
    = link_to new_user_invoice_path(@user), class: 'btn-floating btn-large green' do
      %i.material-icons add
  - elsif @submitted
    %p There are no submitted invoices.
  - elsif @all
    %p There are no invoices.
  %br
  %br