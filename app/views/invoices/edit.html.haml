.container
  .row
    %nav.transparent.no-box-shadow
      .nav-wrapper
        .col.s12
          - if current_user.manager?
            = link_to 'Users', users_path, class: 'breadcrumb light-blue-text'
          = link_to 'Invoices', user_invoices_path(@user), class: 'breadcrumb light-blue-text'
          %span.breadcrumb.grey-text.text-darken-4 Edit
  %h4 Edit Invoice
  %br
  = render 'shared/errors', object: @invoice

  = form_for @invoice do |form|
    = render partial: 'fields', locals: { f: form }
    %br
    = form.submit 'UPDATE INVOICE', :class => 'btn btn-success'
    = link_to 'CANCEL', user_invoices_path(@user), class: 'btn btn-danger btn-outline'
  %br
  %br