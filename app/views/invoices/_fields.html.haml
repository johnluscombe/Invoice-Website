.row
  .col.s12
    .row.valign-wrapper.no-margin-bottom
      .col.s2.grey-text
        Start Date
      .input-field.col.s10
        = f.text_field :start_date_as_string, class: 'datepicker'
    .row.valign-wrapper.no-margin-bottom
      .col.s2.grey-text
        End Date
      .input-field.col.s10
        = f.text_field :end_date_as_string, class: 'datepicker'
    - if current_user.manager?
      .row.valign-wrapper.no-margin-bottom
        .col.s2.grey-text
          Status
        .input-field.col.s10
          = f.select :status, [%w(Started Started), %w(Submitted Submitted), %w(Paid Paid)], {}
      .row.valign-wrapper.no-margin-bottom
        .col.s2.grey-text
          Check No.
        .input-field.col.s10
          = f.text_field :check_no
      .row.valign-wrapper.no-margin-bottom
        .col.s2.grey-text
          Transfer Date
        .input-field.col.s10
          = f.text_field :transfer_date_as_string, class: 'datepicker'
    - if current_user.manager?
      %br
      %h5
        %strong Overrides
      .row.valign-wrapper.no-margin-bottom
        .col.s2.grey-text
          Hours
        .input-field.col.s10
          = f.text_field :hours
      .row.valign-wrapper.no-margin-bottom
        .col.s2.grey-text
          Rate
        .input-field.col.s10
          = f.text_field :rate
      .row.valign-wrapper.no-margin-bottom
        .col.s2.grey-text
          Net Pay
        .input-field.col.s10
          = f.text_field :net_pay