<% if current_user.admin %>
    <h1>Employee invoices</h1>
    <%= link_to "Back to Users", users_path(@user) %><br>
<% else %>
    <h1>Invoices</h1>
<% end %>
<br>
<% if @user.invoices.count > 0 %>
    <table class="table table-striped">
      <col width="100">
      <col width="100">
      <col width="100">
      <col width="100">
      <col width="100">
      <col width="75">
      <% if current_user.admin %>
          <col width="75">
          <col width="75">
          <col width="75">
      <% end %>
      <col width="50">
      <col width="50">
      <tr>
        <th>Start Date</th>
        <th>End Date</th>
        <th>Hours</th>
        <th>Net Pay</th>
        <th>Status</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <%= render @invoices %>
    </table>
    <%= link_to "New invoice", new_user_invoice_path(@user) %>
<% else %>
    <p>You do not have any invoices yet.</p>
    <%= link_to "New invoice", new_user_invoice_path(@user) %>
<% end %>