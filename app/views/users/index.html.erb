<h1>Employee invoices</h1>
<br>
<% if User.where(:admin => false).count > 0 %>
  <table class="table table-striped">
    <col width="200">
    <col width="200">
    <col width="100">
    <col width="50">
    <col width="50">
    <tr>
      <th style="vertical-align: bottom;">Employee Name</th>
      <th style="vertical-align: bottom;">Email</th>
      <th style="vertical-align: bottom;">Current Invoice Amount</th>
      <th></th>
    </tr>
    <%= render @users %>
  </table>
  <%= link_to "New user", new_user_path %>
<% else %>
    <p>You do not have any employees yet.</p>
    <%= link_to "New user", new_user_path %>
<% end %>