<tr>
  <td><%= link_to user.fullname, user_invoices_path(user) %></td>
  <td><%= user.email %></td>
  <% if user.rate != nil %>
    <td><%= sprintf('%.2f', user.rate) %></td>
  <% else %>
      <td></td>
  <% end %>
  <td><%= link_to "Edit", edit_user_path(user) %>
  <td><%= link_to "Delete", user_path(user), method: :delete %></td>
</tr>