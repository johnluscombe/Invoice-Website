.container
  .row
    %nav.transparent.no-box-shadow
      .nav-wrapper
        .col.s12
          - if current_user.manager?
            = link_to 'Users', users_path, class: 'breadcrumb light-blue-text'
          %span.breadcrumb.grey-text.text-darken-4 New

  %h4 New User
  %br
  = render 'shared/errors', object: @user

  = form_for @user do |form|
    = render partial: 'fields', locals: {f: form }
    %br
    = form.submit 'CREATE NEW USER', :class => 'btn btn-success'
    = link_to 'CANCEL', users_path(@user), class: 'btn btn-danger btn-outline'
  %br
  %bf