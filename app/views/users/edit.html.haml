.container
  - if current_user.manager?
    .row
      %nav.transparent.no-box-shadow
        .nav-wrapper
          .col.s12
            = link_to 'Users', users_path, class: 'breadcrumb light-blue-text'
            %span.breadcrumb.grey-text.text-darken-4 Edit
  - else
    %br

  %h4 Edit Profile
  %br
  = form_for @user do |form|
    = render partial: 'fields', locals: {f: form }
    %br
    = form.submit 'SAVE', :class => 'btn'
    = link_to 'CANCEL', redirect_path, class: 'btn'
  %br
  %br