%ol.breadcrumb
  %li.breadcrumb-item
    = link_to 'Employees', users_path
  %li.breadcrumb-item.active Edit Profile

%h1 Edit Profile
%br
= render 'shared/errors', object: @user

= form_for @user do |form|
  = render partial: 'fields', locals: {f: form }
  %br
  = form.submit 'UPDATE USER PROFILE', :class => 'btn btn-success'
  = link_to 'CANCEL', redirect_path, class: 'btn btn-danger btn-outline'